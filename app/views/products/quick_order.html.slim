            = f.text_field "[order][id_4]product_code", class: 'form-control'
          .col-2
            = f.number_field "[order][id_4]quantity", class: 'form-control'
          .col-4
            p 商品名のリンク出てくる
          .col-1
            p 削除
        .row
          .col-1
            = f.label "5"
