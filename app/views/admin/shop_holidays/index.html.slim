= form_with model: SetMonthlyHoliday, url: admin_shop_holiday_path(1), method: :patch, local: true do |f|
  = f.label '月別休業日設定[?]'
  div
  = f.label '月選択'
  = f.select :a, [['a',1]]
  div
  = f.label '2020年7月'
  = f.label '休業日設定'
  p 日曜日	月曜日	火曜日	水曜日	木曜日	金曜日	土曜日
  - select_day.each do |day|
    = day
    = f.check_box :day, value: day
    - if (day % 7) == 0
      div
  div
  = f.submit '保存'
